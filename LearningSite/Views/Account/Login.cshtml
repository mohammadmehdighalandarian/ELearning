@model LearningWeb_Core.DTOs.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<h1>ورود به سایت</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        @if (ViewBag.IsSuccess == "True")
        {
            <div class="alert alert-success">
                خوش امدید.
            </div>

            <script>
                var delay = 3000;
                setTimeout(function () { window.location = "https://localhost:7089/index"; }, delay);

            </script>
        }
        else if (ViewBag.IsSuccess == "False")
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Password" class="control-label"></label>
                <div>
                    <input type="password" asp-for="Password" class="form-control" id="password" />
                    <div id="strength"></div>
                </div>

                <span asp-validation-for="Password" class="text-danger"></span>

                <input type="checkbox" id="myCheckbox" onclick="unhidePassword()">
                <label for="myCheckbox">نمایش رمز عبور</label>

            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RemmeberMe" /> @Html.DisplayNameFor(model => model.RemmeberMe)
                </label>
            </div>

            <div class="link">
                <a href="/ForgotPassword"> <i class="zmdi zmdi-lock"></i> رمز عبور خود را فراموش کرده ام !</a>
                <a href="/Register"> <i class="zmdi zmdi-account"></i> عضویت در سایت </a>
            </div>

            <div class="form-group">
                <input type="submit" value="ورود" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}